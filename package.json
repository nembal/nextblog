{
  "name": "nextblog",
  "version": "1.1.0",
  "description": "A modern, feature-rich blog framework built with Next.js, Tailwind CSS, and Shadcn/UI",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -p tsconfig.build.json --outDir dist/cjs --module commonjs",
    "build:esm": "tsc -p tsconfig.build.json --outDir dist/esm --module esnext",
    "prepublishOnly": "npm run build",
    "prepare-publish": "node scripts/prepare-publish.js",
    "version-bump": "node scripts/version-bump.js",
    "setup-github": "node scripts/setup-github.js",
    "start": "next start",
    "lint": "next lint",
    "test": "jest"
  },
  "files": [
    "dist/",
    "nextblog.config.js",
    "README.md",
    "LICENSE",
    "docs/",
    "examples/"
  ],
  "dependencies": {
    "@mdx-js/mdx": "^2.3.0",
    "@mdx-js/react": "^2.3.0",
    "gray-matter": "^4.0.3",
    "marked": "^9.1.6"
  },
  "peerDependencies": {
    "next": ">=13.5.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "tailwindcss": ">=3.0.0"
  },
  "devDependencies": {
    "@radix-ui/react-slot": "^1.1.2",
    "@tailwindcss/typography": "^0.5.10",
    "@types/jest": "^29.5.5",
    "@types/marked": "^5.0.2",
    "@types/node": "^20.17.22",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "autoprefixer": "^10.4.16",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "^8.51.0",
    "eslint-config-next": "^13.5.4",
    "jest": "^29.7.0",
    "lucide-react": "^0.284.0",
    "next": "^13.5.4",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^1.14.0",
    "tailwindcss": "^3.3.3",
    "tailwindcss-animate": "^1.0.7",
    "ts-jest": "^29.2.6",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "next.js",
    "blog",
    "markdown",
    "mdx",
    "tailwindcss",
    "shadcn",
    "react",
    "typescript",
    "tags",
    "reading-time"
  ],
  "author": {
    "name": "NextBlog Team",
    "email": "info@nextblog.dev",
    "url": "https://nextblog.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nextblog/nextblog"
  },
  "bugs": {
    "url": "https://github.com/nextblog/nextblog/issues"
  },
  "homepage": "https://nextblog.dev",
  "engines": {
    "node": ">=18.0.0"
  }
}
